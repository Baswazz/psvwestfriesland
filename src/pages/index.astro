---
import BaseLayout from "../layouts/BaseLayout.astro";
import MobileNav from "../components/MobileNav.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";

const title = "PSV Westfriesland";
const year = new Date().getFullYear() - 1927;

const navItems = [
  { label: "Home", url: "#home" },
  { label: "Accommodatie", url: "#accommodatie" },
  { label: "Bestuur", url: "#bestuur" },
  { label: "Lessen", url: "#lessen" },
  { label: "Wedstrijden", url: "#wedstrijden" },
  { label: "Lidmaatschap", url: "#lidmaatschap" },
  { label: "Geschiedenis", url: "#geschiedenis" }
];

const sponsors = [
  "/assets/sponsors/oudbouwconstructies.png",
  "/assets/sponsors/ranzijn.png",
  "/assets/sponsors/kinepolis.png",
